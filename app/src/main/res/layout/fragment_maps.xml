<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".favouritesViewModel.MapsFragment">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".favouritesViewModel.MapsFragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/main3_blue">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/search_text_fav"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/main3_blue"
                android:drawableStart="@drawable/location_pin_icon"
                android:drawablePadding="10dp"
                android:drawableTint="#Ff0000"
                android:hint="Search your location"
                android:imeOptions="actionSearch"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:textColorHint="#6D4C41"
                android:textSize="16sp">

            </EditText>
        </FrameLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/menu_icon"/>
    </LinearLayout>
</RelativeLayout>