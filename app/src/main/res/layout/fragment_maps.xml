<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".favouritesViewModel.MapsFragment">
    
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tools:context=".favouritesViewModel.MapsFragment"
        android:name="com.example.wethero.favouritesViewModel.MapsFragment"
        tools:layout="@layout/fragment_maps" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/main3_blue">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/Search_bar_location"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/main3_blue"
                android:drawableStart="@drawable/location_pin_icon"
                android:drawableTint="#Ff0000"
                android:drawablePadding="10dp"
                android:hint="Search your location"
                android:imeOptions="actionSearch"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp">

            </EditText>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>